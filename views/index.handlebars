<h1>Eat Da Burger!</h1>

<h2>Burgers to Devore</h2>

<ul>
  {{#each burger1}}
    {{#unless devoted}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devored Burger</h2>

<ul>
  {{#each burger1}}
    {{#if devoted}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Your favorite Burger:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
